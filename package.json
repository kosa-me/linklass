{
  "name": "linklass",
  "displayName": "Linklass",
  "description": "HTMLファイル内のCSSクラス名をリアルタイムでCSS側に補完するVSCode拡張機能",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/kosa-me/linklass.git"
  },
  "homepage": "https://github.com/kosa-me/linklass#readme",
  "bugs": {
    "url": "https://github.com/kosa-me/linklass/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
